@model List<Category>

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4 text-end">
        <h2 class="text-primary fw-bold">Manage Categories</h2>
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle-fill fs-5"></i>
            <span class="fw-semibold">Create New</span>
        </a>
    </div>

    <div class="card">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0 text-center table-bordered">
                <thead class="table-primary">
                    <tr>
                        <th style="width: 40%">Category Name</th>
                        <th style="width: 20%">Display Order</th>
                        <th style="width: 40%">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
                    {
                        <tr>
                            <td class="fw-semibold text-dark">@obj.Name</td>
                            <td class="text-muted">@obj.DisplayOrder</td>
                            <td>
                                <div class="d-flex justify-content-center gap-3">
                                    <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-outline-primary rounded-pill px-3 py-1 d-flex align-items-center">
                                        <i class="bi bi-pencil-fill me-1"></i> Edit
                                    </a>
                                    <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-outline-danger rounded-pill px-3 py-1 d-flex align-items-center">
                                        <i class="bi bi-trash-fill me-1"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
